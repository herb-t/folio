{
  "entrypoint": "index.html",
  "shell": "src/portfolio-app.html",
  "fragments": [
    "src/works-page.html",
    "src/post-page.html",
    "src/list-page.html",
    "src/about-page.html",
    "src/contact-page.html"
  ],
  "sources": [
    "src/**/*",
    "images/**/*",
    "data/**/*"
  ],
  "extraDependencies": [
    "manifest.json",
    "bower_components/webcomponentsjs/*.js"
  ],
  "lint": {
    "rules": ["polymer-2"]
  },
  "builds": [
    {
      "preset": "es5-bundled"
    },
    {
      "preset": "es6-bundled"
    },
    {
      "preset": "es6-unbundled"
    }
  ]
}
